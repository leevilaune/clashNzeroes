<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="clashPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.onesnzeroes.clashnzeroes.model.player.PlayerEntity</class>
        <class>com.onesnzeroes.clashnzeroes.model.player.IconUrls</class>
        <class>com.onesnzeroes.clashnzeroes.model.player.ClanEntity</class>
        <class>com.onesnzeroes.clashnzeroes.model.player.BadgeUrls</class>
        <class>com.onesnzeroes.clashnzeroes.model.player.LeagueEntity</class>

        <class>com.onesnzeroes.clashnzeroes.model.war.WarEntity</class>
        <class>com.onesnzeroes.clashnzeroes.model.war.AttackEntity</class>
        <class>com.onesnzeroes.clashnzeroes.model.war.WarClanEntity</class>
        <class>com.onesnzeroes.clashnzeroes.model.war.MemberEntity</class>

        <class>com.onesnzeroes.clashnzeroes.model.tracked.TrackedWar</class>
        <class>com.onesnzeroes.clashnzeroes.model.tracked.TrackedPlayer</class>



        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="jakarta.persistence.sql-dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.show_sql" value="true" />

        </properties>
    </persistence-unit>
</persistence>